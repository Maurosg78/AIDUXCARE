{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "jest", "tsd"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "./**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 