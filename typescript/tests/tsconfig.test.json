{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "jest", "tsd"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": [
    "./**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 